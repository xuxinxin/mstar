
#sidebar.sidebar-hide
  transform translateX(-270px)

  .hide-button
    transform rotate(180deg)
    border-radius 0 3px 3px 0
#sidebar
  text-align: center;
  //background: #f5f5f5;
  background-image url('/images/114H-1.jpg')

  background-position center center
  background-size cover
  //background-blend-mode overlay
  z-index: 1000;
  position: fixed;
  width: 300px;
  max-width: 100%;
  height: 100%;
  height: 100vh;
  top: 0;
  left: 0;

  box-sizing border-box
  color #fff

  .sidebar-wrap
    background-color rgba(59,59,59,0.8)
    box-sizing border-box
    width 100%
    height 100%
    padding: 2em 1em;
  .logo
    position relative
    margin-top 35px
    img
      -webkit-animation-duration: 8s;
      -moz-animation-duration: 8s;
      animation-duration: 8s;
      -webkit-animation-iteration-count: infinite;
      -moz-animation-iteration-count: infinite;
      animation-iteration-count: infinite;
      -webkit-animation-name: rotate-forever;
      -moz-animation-name: rotate-forever;
      animation-name: rotate-forever;
      -webkit-animation-timing-function: linear;
      -moz-animation-timing-function: linear;
      animation-timing-function: linear;
    span
      position absolute
      width 100%
      text-align center
      font-size 3em
      left 0
      top 50%
      margin-top -26px
      pointer-events none
  .close-button
    position: absolute;
    border: none;
    background: none;
    margin: 0;
    z-index: 100;
    top: 0;
    right: 0;
    font-size: 18px;
    color: #ddd;
    cursor: pointer;
    pointer-events: none;
    padding: 20px 30px;
    opacity: 0;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-transition: opacity 0.3s;
    transition: opacity 0.3s;
    &:hover
      color: #7b7b7b;

  .hide-button
    position absolute
    top 33px
    height 60px
    margin-top -30px
    width 20px
    outline none
    border none
    cursor pointer
    background-color #343a40
    right 0
    z-index 99
    opacity 0.3
    color white
    border-radius 3px 0 0 3px
    transition opacity 0.3s ease-in-out
    &:hover
      opacity 0.6


  .intro
    margin: 1.75em 0 1.25em;
    line-height: 1;
    font-family: "Playfair Display", serif;
    font-size : 22px;

#sidebar-nav
  padding-bottom : 1em;
  font-size 16px;
  a
    margin 0 auto;
    width 120px;
    text-align left;
    color inherit;
    display: block;
    padding 10px 0;
    &:hover,&.nav-current
      color #c4c9bb

    i
      padding-right 6px
      font-size 0.9em
#sidebar-bottom
  width 100%
  position absolute
  bottom 0
  transform translateX(-50%)
  left 50%

.social
  li
    list-style none;
    display inline-block;
    padding 0px
    margin 2px
    background-color white
    border-radius 50%
    width 32px
    height 32px

  a
    display block
    position relative
    top: 50%
    margin-top -0.5em
    color rgba(59,59,59,0.8)
    &:hover
      color #333

@media screen and (max-width: 599px)
  #sidebar
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
    -webkit-transition: -webkit-transform 0.3s;
    transition: -webkit-transform 0.3s;

    &.sidebar--open
      -webkit-transform: translate3d(0, 0, 0);
      transform: translate3d(0, 0, 0);

    .hide-button
      display none

    .close-button
      opacity 1
      pointer-events auto